<% content_for :title, "Admin Reports" %>
<%= render layout: "layouts/admin" do %>
  <div class="px-4 py-6 sm:px-0">
    <div class="border-4 border-dashed border-gray-200 dark:border-gray-700 rounded-lg p-8">
      <div class="mb-8 flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
          <% if @reportable %>
            Reports for <%= @reportable.class.name %> #<%= @reportable.id %>
          <% else %>
            All Reports
          <% end %>
        </h1>

        <% unless @reportable %>
          <div class="flex space-x-2">
            <%= link_to "All", admin_reports_path,
                class: "px-4 py-2 rounded-md text-sm font-medium #{params[:status].blank? ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600'}" %>
            <%= link_to "Pending", admin_reports_path(status: 'pending'),
                class: "px-4 py-2 rounded-md text-sm font-medium #{params[:status] == 'pending' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600'}" %>
            <%= link_to "Resolved", admin_reports_path(status: 'resolved'),
                class: "px-4 py-2 rounded-md text-sm font-medium #{params[:status] == 'resolved' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600'}" %>
            <%= link_to "Dismissed", admin_reports_path(status: 'dismissed'),
                class: "px-4 py-2 rounded-md text-sm font-medium #{params[:status] == 'dismissed' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600'}" %>
          </div>
        <% end %>
      </div>

      <% if @reports.any? %>
        <div class="grid grid-cols-1 gap-6">
          <% @reports.each do |report| %>
            <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
              <div class="p-6">
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
                      <%= link_to "Report ##{report.id}", admin_report_path(report), class: "hover:underline" %>
                      <span class="ml-3 inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium
                        <% if report.status == 'pending' %>
                          bg-yellow-100 text-yellow-800 dark:bg-yellow-900/50 dark:text-yellow-200
                        <% elsif report.status == 'resolved' %>
                          bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-200
                        <% elsif report.status == 'dismissed' %>
                          bg-gray-100 text-gray-800 dark:bg-gray-900/50 dark:text-gray-200
                        <% end %>">
                        <%= report.status.titleize %>
                      </span>
                    </h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                      Reported by <%= report.reporter.username || report.reporter.email %>
                      on <%= report.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                    </p>
                  </div>
                  <div class="text-right">
                    <h4 class="text-sm font-medium text-gray-500 dark:text-gray-400">Reported Content:</h4>
                    <p class="text-base text-gray-900 dark:text-white">
                      <%= report.reportable_type %> #<%= report.reportable_id %>
                      <% if report.reportable_type == 'Post' && report.reportable %>
                        <div class="flex items-center gap-2 mt-2">
                          <% if report.reportable.image.attached? %>
                            <%= image_tag report.reportable.image.variant(resize_to_limit: [50, 50]),
                                          alt: "Post Image",
                                          class: "w-12 h-12 object-cover rounded-md border border-gray-200 dark:border-gray-600" %>
                          <% end %>
                          - "<%= truncate(report.reportable&.description, length: 50) %>"
                        </div>
                      <% elsif report.reportable_type == 'Comment' && report.reportable %>
                        - "<%= truncate(report.reportable&.description, length: 50) %>"
                      <% elsif report.reportable_type == 'User' && report.reportable %>
                        - <%= report.reportable.username || report.reportable.email %>
                      <% end %>
                    </p>
                  </div>
                </div>

                <div class="mb-4">
                  <h4 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Reason:</h4>
                  <p class="text-gray-700 dark:text-gray-300"><%= simple_format(report.reason) %></p>
                </div>

                <% if report.resolved? || report.dismissed? %>
                  <div class="mb-4 text-sm text-gray-500 dark:text-gray-400">
                    <p>
                      <%= report.status.titleize %> by
                      <%= report.resolved_by&.username || report.resolved_by&.email %>
                      on <%= report.resolved_at&.strftime("%B %d, %Y at %I:%M %p") %>
                    </p>
                  </div>
                <% end %>

                <div class="flex justify-end space-x-3 mt-4">
                  <%= link_to "View Details", admin_report_path(report), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

                  <% if report.status == 'pending' %>
                    <%= button_to "Quick Resolve", resolve_admin_report_path(report),
                        method: :patch,
                        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500",
                        data: { turbo_confirm: "Are you sure you want to resolve this report?" } %>

                    <%= button_to "Dismiss", dismiss_admin_report_path(report),
                        method: :patch,
                        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:bg-gray-700 dark:text-gray-200 dark:border-gray-600 dark:hover:bg-gray-600",
                        data: { turbo_confirm: "Are you sure you want to dismiss this report?" } %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <% if @reportable && @reports.where(status: 'pending').any? %>
          <div class="mt-8 text-right">
            <%= button_to "Resolve All Pending Reports",
                resolve_all_reports_path_for(@reportable),
                method: :patch,
                class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                data: { turbo_confirm: "Are you sure you want to resolve all pending reports for this #{@reportable.class.name.downcase}?" } %>
          </div>
        <% end %>

      <% else %>
        <div class="px-6 py-8 text-center bg-white dark:bg-gray-800 shadow-lg rounded-lg border border-gray-200 dark:border-gray-700">
          <p class="text-gray-500 dark:text-gray-400 text-lg">No reports found.</p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
