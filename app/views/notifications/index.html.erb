<%# app/views/notifications/index.html.erb %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 dark:from-gray-900 dark:to-gray-800">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-2">
            Notifications
          </h1>
          <p class="text-gray-600 dark:text-gray-400">Stay updated with your latest activities</p>
        </div>
        
        <!-- Stats Card -->
        <div class="hidden md:flex items-center space-x-4">
          <div class="bg-white dark:bg-gray-800 rounded-xl px-4 py-2 shadow-sm border border-gray-200 dark:border-gray-700">
            <div class="text-sm text-gray-500 dark:text-gray-400">Total</div>
            <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @total_count %></div>
          </div>
          <% if @unread_count > 0 %>
            <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl px-4 py-2 shadow-sm border border-blue-200 dark:border-blue-800">
              <div class="text-sm text-blue-600 dark:text-blue-400">Unread</div>
              <div class="text-2xl font-bold text-blue-700 dark:text-blue-300"><%= @unread_count %></div>
            </div>
          <% end %>
          <% if @read_count > 0 %>
            <div class="bg-green-50 dark:bg-green-900/20 rounded-xl px-4 py-2 shadow-sm border border-green-200 dark:border-green-800">
              <div class="text-sm text-green-600 dark:text-green-400">Read</div>
              <div class="text-2xl font-bold text-green-700 dark:text-green-300"><%= @read_count %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Action Buttons and Unread Notifications Alert -->
    <% if @all_notifications.any? %>
      <div class="mb-6 space-y-4">
        <!-- Action Buttons -->
        <div class="flex flex-wrap gap-3 justify-center md:justify-start">
          <% if @unread_count > 0 %>
             <%= button_to mark_as_read_notifications_path, method: :patch, class: "px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 font-medium flex items-center space-x-2" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">                
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Mark All as Read</span>
              <% end %>
          <% end %>
          
          <% if @read_count > 0 %>
            <%= button_to delete_read_notifications_path, method: :delete,
                data: { confirm: "Are you sure you want to delete all #{@read_count} read notifications? This action cannot be undone." },
                class: "px-6 py-3 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-xl hover:from-orange-600 hover:to-orange-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 font-medium flex items-center space-x-2" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              <span>Delete Read</span>
            <% end %>
          <% end %>
          
          <% if @total_count > 0 %>
            <%= button_to delete_all_notifications_path, method: :delete,
                data: { confirm: "Are you sure you want to delete ALL #{@total_count} notifications? This action cannot be undone." },
                class: "px-6 py-3 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-xl hover:from-red-600 hover:to-red-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 font-medium flex items-center space-x-2" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              <span>Delete All</span>
            <% end %>
          <% end %>
        </div>

        <!-- Unread Alert (if any) -->
        <% if @unread_count > 0 %>
          <div class="relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-purple-500 opacity-10 rounded-2xl"></div>
            <div class="relative bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm border border-blue-200 dark:border-blue-800 rounded-2xl p-6">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-7H7l5-5 5 5h-5v7z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white">New Activity!</h3>
                  <p class="text-gray-600 dark:text-gray-400">You have <%= pluralize(@unread_count, 'unread notification') %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Notifications List -->
    <% if @all_notifications.empty? %>
      <div class="text-center py-16">
        <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-7H7l5-5 5 5h-5v7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-300 mb-2">No notifications yet</h3>
        <p class="text-gray-500 dark:text-gray-400">When someone interacts with your posts, you'll see it here!</p>
      </div>
    <% else %>
      <div class="space-y-3">
        <% @all_notifications.each_with_index do |notification, index| %>
          <div class="group relative overflow-hidden transition-all duration-300 hover:transform hover:-translate-y-1">
            <!-- Notification Card -->
            <div class="relative bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border <%= notification.read? ? 'border-gray-200 dark:border-gray-700' : 'border-blue-200 dark:border-blue-800 ring-2 ring-blue-100 dark:ring-blue-900/50' %>">
              
              <!-- Unread Indicator -->
              <% unless notification.read? %>
                <div class="absolute left-0 top-0 bottom-0 w-1 bg-gradient-to-b from-blue-500 to-purple-600 rounded-l-2xl"></div>
              <% end %>
              
              <div class="p-6">
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <!-- Notification Icon and User Avatar -->
                    <div class="flex items-start space-x-4">
                      <div class="flex-shrink-0 relative">
                        <!-- User Avatar (if available) -->
                        <% if notification.notification_user&.avatar&.attached? %>
                          <div class="w-12 h-12 rounded-full overflow-hidden border-2 border-gray-200 dark:border-gray-600">
                            <%= image_tag notification.notification_user.avatar, class: "w-full h-full object-cover" %>
                          </div>
                          <!-- Notification type badge -->
                          <div class="absolute -bottom-1 -right-1 w-6 h-6 rounded-full bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-600 flex items-center justify-center">
                            <% case notification.notification_icon %>
                            <% when 'comment' %>
                              <svg class="w-3 h-3 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                              </svg>
                            <% when 'heart' %>
                              <svg class="w-3 h-3 text-red-500" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                              </svg>
                            <% when 'user-plus' %>
                              <svg class="w-3 h-3 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                              </svg>
                            <% end %>
                          </div>
                        <% else %>
                          <!-- Fallback icon when no avatar -->
                          <div class="w-12 h-12 rounded-full bg-gradient-to-br <%= notification.read? ? 'from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600' : 'from-blue-100 to-purple-100 dark:from-blue-900 dark:to-purple-900' %> flex items-center justify-center">
                            <% case notification.notification_icon %>
                            <% when 'comment' %>
                              <svg class="w-6 h-6 <%= notification.read? ? 'text-gray-500' : 'text-blue-600 dark:text-blue-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                              </svg>
                            <% when 'heart' %>
                              <svg class="w-6 h-6 <%= notification.read? ? 'text-gray-500' : 'text-red-500' %>" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                              </svg>
                            <% when 'user-plus' %>
                              <svg class="w-6 h-6 <%= notification.read? ? 'text-gray-500' : 'text-green-600 dark:text-green-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                              </svg>
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                      
                      <!-- Notification Content -->
                      <div class="flex-1 min-w-0">
                        <div class="<%= notification.read? ? 'text-gray-700 dark:text-gray-300' : 'text-gray-900 dark:text-white' %>">
                          <% if notification.notification_url.present? %>
                            <%= link_to notification.notification_url, class: "font-medium hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200 block group-hover:underline" do %>
                              <%= notification.message %>
                            <% end %>
                          <% else %>
                            <span class="font-medium"><%= notification.message %></span>
                          <% end %>
                        </div>
                        
                        <!-- Timestamp -->
                        <div class="flex items-center mt-2 space-x-2">
                          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                          <span class="text-sm text-gray-500 dark:text-gray-400">
                            <%= time_ago_in_words(notification.created_at) %> ago
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Mark as Read Button -->
                  <% unless notification.read? %>
                    <div class="ml-4 flex-shrink-0">
                      <%= button_to mark_as_read_notification_path(notification), method: :patch, 
                          class: "px-4 py-2 bg-green-50 hover:bg-green-100 dark:bg-green-900/20 dark:hover:bg-green-900/40 text-green-700 dark:text-green-400 rounded-xl hover:shadow-md transition-all duration-200 text-sm font-medium border border-green-200 dark:border-green-800" do %>
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Mark Read
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) && @all_notifications.respond_to?(:current_page) %>
        <div class="mt-12 flex justify-center">
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 px-6 py-4">
            <%= paginate @all_notifications %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<style>
  /* Custom pagination styling */
  .pagination {
    @apply flex items-center space-x-2;
  }
  
  .pagination a, .pagination span {
    @apply px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200;
  }
  
  .pagination a {
    @apply text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-white;
  }
  
  .pagination .current {
    @apply bg-blue-600 text-white shadow-lg;
  }
  
  .pagination .disabled {
    @apply text-gray-400 dark:text-gray-600 cursor-not-allowed;
  }
  
  .pagination .prev, .pagination .next {
    @apply font-semibold;
  }
  
  .pagination .gap {
    @apply text-gray-400 dark:text-gray-600;
  }
</style>