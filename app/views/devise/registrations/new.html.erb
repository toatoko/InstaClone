<body class="gradient-bg">
  
  <div class="items-center flex flex-col flex-grow py-12 py-2 sm:px-6 lg:px-8 ">
    <div class="max-w-md w-full space-y-8">
            <!-- Logo and Header Section -->
      <div class="text-center floating-animation">
        <img
            class="mx-auto h-25 w-auto drop-shadow-2xl"
            src="https://www.evmux.com/blog/wp-content/uploads/2023/12/instagram-copy-e1702584672389.png"
            alt="Instagram"/>
        <h2 style="margin-top:1.5rem;text-align:center;font-size:1.875rem;font-weight:800;color:#ffffff;text-shadow:0 1px 2px rgba(0,0,0,0.25);">
            Sign up now for free
        </h2>
        <p class="mt-2 text-center text-sm text-white/80">
            Or <%= link_to "Login", new_user_session_path, class:"text-yellow-500" %>
        </p>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="glass-effect rounded-3xl p-8 shadow-2xl">
          <form class="mt-8 space-y-6"><br>                    
            <div class="rounded-md shadow-sm -space-y-px">
              <div>
                <%= f.label :first_name, class:"sr-only" %>
                <%= f.text_field :first_name, autofocus: true, placeholder:"First Name" ,
                class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
              </div>
              <div>
                <%= f.label :last_name, class:"sr-only" %>
                <%= f.text_field :last_name, placeholder:"Last Name" ,
                class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
              </div>
              <div>
                <%= f.label :username, class:"sr-only" %>
                <%= f.text_field :username, placeholder:"Username" ,
                class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
              </div>
              <div>
                <%= f.label :email, class:"sr-only" %>
                <%= f.email_field :email, autocomplete: "email", placeholder:"Email address" ,
                class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
              </div>

              <div>
                <%= f.label :password, class:"sr-only" %>
                <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password (6 Character minimum)", 
                    class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
              </div>

              <div>
                <%= f.label :password_confirmation, class:"sr-only" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Password (must match your password)", 
                  class:"input-focus appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:z-10 sm:text-sm transition-all duration-300 bg-white/90 backdrop-blur-sm" %>
              </div>
            </div>
              <%= render "devise/shared/links" %>
                <div class="actions">
                  <%= f.submit "Sign up", style: "display:flex;justify-content:center;width:100%;padding:0.75rem 1rem;border:none;border-radius:0.75rem;font-size:0.875rem;font-weight:700;color:#ffffff;background-image:linear-gradient(to right,#8b5cf6,#ec4899,#f97316);transition:all 0.3s ease;position:relative;" %>
                </div>
              <% end %>

            </div>
          </form>
      </div>>
    </div>
  </div>
</body>