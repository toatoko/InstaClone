<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">All Posts</h1>
    <% if user_signed_in? %>
      <%= link_to 'New Post', new_post_path, 
          class: 'bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-medium' %>
    <% end %>
  </div>

  <div class="space-y-6">
    <% @posts.each do |post| %>
      <article class="bg-white rounded-lg shadow-md overflow-hidden">
        <!-- Post Header -->
        <div class="p-4">
          <div class="flex items-center space-x-3 mb-3">
            <% if post.user.avatar.attached? %>
              <%= image_tag post.user.avatar, class: "w-10 h-10 rounded-full object-cover" %>
            <% else %>
              <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center">
                <span class="text-gray-600 font-medium"><%= post.user.username %></span>
              </div>
            <% end %>
            <div>
              <h3 class="font-semibold text-gray-900"><%= post.user.first_name %></h3>
              <p class="text-sm text-gray-500"><%= time_ago_in_words(post.created_at) %> ago</p>
            </div>
          </div>
          
          <% if post.description.present? %>
            <p class="text-gray-800 mb-3"><%= simple_format(post.description) %></p>
          <% end %>
        </div>

        <!-- Post Image -->
        <% if post.image.attached? %>
          <div class="w-full">
            <%= image_tag post.image, class: "w-full h-auto object-cover" %>
          </div>
        <% end %>

        <!-- Post Actions -->
        <div class="p-4">
          <div class="flex items-center space-x-4 mb-3">
            <div id="like_button_<%= post.id %>">
              <%= render 'posts/like_button', post: post %>
            </div>
            
            <%= link_to post_path(post), class: "text-gray-600 hover:text-gray-800" do %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            <% end %>
          </div>

          <!-- Likes Count -->
          <div id="likes_count_<%= post.id %>">
            <%= render 'posts/likes_count', post: post %>
          </div>

          <!-- Comments Preview -->
          <div class="mt-3">
            <% preview_comments = post.preview_comments(2) %>
            <% if preview_comments.any? %>
              <div class="space-y-2">
                <% preview_comments.each do |comment| %>
                  <div class="text-sm">
                    <span class="font-semibold"><%= comment.user.username %></span>
                    <span class="text-gray-800"><%= truncate(comment.content, length: 100) %></span>
                  </div>
                <% end %>
              </div>
              
              <% if post.comments_count > 2 %>
                <%= link_to "View all #{post.comments_count} comments", post, 
                    class: 'text-gray-500 text-sm hover:text-gray-700 mt-2 inline-block' %>
              <% elsif post.comments_count > 0 %>
                <%= link_to 'View post', post, 
                    class: 'text-gray-500 text-sm hover:text-gray-700 mt-2 inline-block' %>
              <% end %>
            <% else %>
              <%= link_to 'Be the first to comment', post, 
                  class: 'text-gray-500 text-sm hover:text-gray-700' %>
            <% end %>
          </div>
        </div>
      </article>
    <% end %>
  </div>
</div>